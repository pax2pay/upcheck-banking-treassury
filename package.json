{
	"name": "@utily/library-template",
	"version": "0.0.20",
	"description": "Template library for Typescript.",
	"author": "Utily Contributors",
	"license": "MIT",
	"repository": "https://github.com/utily/library-template",
	"bugs": {
		"url": "https://github.com/utily/library-template/issues"
	},
	"homepage": "https://github.com/utily",
	"private": false,
	"main": "dist/index.js",
	"typings": "dist/index.d.ts",
	"type": "module",
	"git": {
		"tagName": "v${version}"
	},
	"github": {
		"release": true
	},
	"jest": {
		"transform": {
			"^.+\\.(j|t)sx?$": [
				"ts-jest",
				{
					"tsconfig": "./tsconfig.test.json"
				}
			]
		},
		"transformIgnorePatterns": [
			"<rootDir>/node_modules/(?!(cryptly|authly|isoly|isly|gracely|cloudly-http|cloudly-router|cloudly-rest|cloudly-formdata|@pax2pay|@userwidgets)/.*)"
		],
		"testEnvironment": "node",
		"testRegex": "((\\.|/)(test|spec))(\\.|\\/.+)(jsx?|tsx?)$",
		"testPathIgnorePatterns": [
			"node_modules/",
			"dist/"
		],
		"collectCoverageFrom": [
			"**/*.{ts,tsx,js,jsx}",
			"!**/node_modules/**",
			"!**/dist/**"
		]
	},
	"scripts": {
		"lint": "eslint --max-warnings=0 '**/*.{ts,tsx}'",
		"fix": "eslint '**/*.{ts,tsx}' --fix",
		"build": "tsc -p .",
		"test": "jest",
		"prepare": "npm run build",
		"clean": "rimraf dist node_modules coverage"
	},
	"devDependencies": {
		"@pax2pay/model-banking": "0.1.94",
		"@types/jest": "^29.5.0",
		"@typescript-eslint/eslint-plugin": "5.60.1",
		"@typescript-eslint/parser": "5.60.1",
		"dotenv": "^16.0.3",
		"isomorphic-fetch": "3.0.0",
		"eslint": "^8.43.0",
		"eslint-plugin-prettierx": "github:utily/eslint-plugin-prettierx#utily-20221229",
		"eslint-plugin-simple-import-sort": "^10.0.0",
		"jest": "^29.5.0",
		"prettierx": "github:utily/prettierx#utily-20221229",
		"rimraf": "^4.4.1",
		"ts-jest": "^29.1.0",
		"typescript": "^5.0.3"
	},
	"dependencies": {},
	"overrides": {
		"semver": "7.5.3",
		"optionator": "0.9.3"
	}
}
